// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @unique
  cash            Int     @default(2500)
  inventory       Int[]
  premium         Boolean @default(false)
  level           Int     @default(1)
  xp              Int     @default(0)
  occupation      Int     @default(0)
  banned          Boolean @default(false)
  achievements    Int[]
  verified        Boolean @default(false)
  mask            Int?
  quests          Int[]
  completedQuests Int[]
}

model Item {
  id           Int        @id @unique @default(autoincrement())
  name         String
  description  String
  price        Int
  onSale       Boolean    @default(false)
  alwaysOnSale Boolean    @default(false)
  type         ItemType[]
}

enum ItemType {
  Casual
  Mask
  Weapon
}

model PersonalShop {
  id      Int    @id @unique @default(autoincrement())
  ownerId String @unique
  items   Int[]
}

model Donation {
  id       Int      @id @unique @default(autoincrement())
  donator  String
  reciever String
  amount   Int
  time     DateTime @default(now())
}

model Job {
  id            Int    @id @unique @default(autoincrement())
  name          String
  description   String
  requiredLevel Int
}

model Achievement {
  id          Int    @id @unique @default(autoincrement())
  name        String
  description String
  icon        String
}

enum PropertyType {
  House
  Apartment
  Mansion
  Hillside
  Commercial
}

model Property {
  id          Int          @id @unique @default(autoincrement())
  name        String
  description String
  value       Int
  owner       String
  type        PropertyType
}

enum HeistDifficulty {
  Cakewalk
  Easy
  Medium
  Hard
  Extreme
  Nightmare
}

model Heist {
  id            Int             @id @unique @default(autoincrement())
  name          String
  description   String
  minPayout     Int
  requiredLevel Int
  avaliable     Boolean         @default(false)
  difficulty    HeistDifficulty
}

enum QuestGoal {
  Cash
  Level
  Item
}

enum QuestReward {
  Cash
  XP
  Item
}

model Quest {
  id            Int         @id @unique @default(autoincrement())
  name          String
  goalType      QuestGoal
  goal          Int
  requiredLevel Int
  rewardType    QuestReward
  reward        Int
  active        Boolean     @default(false)
}
