// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @unique
  cash      Int     @default(100)
  inventory Int[]
  premium   Boolean @default(false)
  level     Int     @default(1)
  xp        Int     @default(0)
}

model Item {
  id          Int     @id @unique @default(autoincrement())
  name        String
  description String
  price       Int
  onSale      Boolean @default(false)
}

model PersonalShop {
  id      Int    @id @unique @default(autoincrement())
  ownerId String @unique
  items   Int[]
}

model Donation {
  id       Int      @id @unique @default(autoincrement())
  donator  String
  reciever String
  amount   Int
  time     DateTime @default(now())
}

model Job {
  id            Int    @id @unique @default(autoincrement())
  name          String
  description   String
  income        Int
  requiredLevel Int
}
